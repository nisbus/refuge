ERTS_BIN_DIR=$(cd ${0%/*} && pwd)
export ROOTDIR=${ERTS_BIN_DIR%/*}
TEMPLATES_DIR=$ROOTDIR/share/templates
REFUGE_PORT=0

basename=`basename $0`

display_help ()
{
    cat << EOF
Usage: $basename [OPTION] HOME

  -h          display this help
  -p PORT     set the port to PORT (default: automatic)
EOF
}

display_error () {
    if test -n "$1"; then
        echo $1 >&2
    fi
    echo >&2
    echo "Try \`"$basename" -h' for more information." >&2
    false
}

_make_refuge_home ()
{
    home=$1
    echo "--Deploying a new Refuge instance in $home"
    _deploy_directories $home
    _deploy_vmargs $home
    _deploy_localini $home
}

_deploy_vmargs ()
{
    home=$1
    echo "  --Deploying vm.args in $home"
    if test -f $/home/vm.args; then
        echo "      vm.args is already deployed!"
    else
        cp $ROOTDIR/etc/refuge/vm.args $home
        echo "      Done!"
    fi
}

_deploy_localini ()
{
    home=$1
    echo "  --Deploying local.ini in $home"
    if test -f $home/local.ini; then
        echo "      local.ini is already deployed!"
    else
        escaped_home=${home////\\/}
        cat $TEMPLATES_DIR/local.ini \
            | sed "s/{{refuge_home}}/$escaped_home/" \
            | sed "s/{{refuge_port}}/$REFUGE_PORT/" \
            > $home/local.ini
        echo "      Done!"
    fi
}

_deploy_directories ()
{
    home=$1
    echo "  --Creating directories lib and log"
    if test -d $home/lib; then
        echo "      lib is already present!"
    else
        mkdir $home/lib
        echo "      Done!"
    fi

    if test -d $home/log; then
        echo "      log is already present!"
    else
        mkdir $home/log
        echo "      Done!"
    fi
}

parse_script_option_list () 
{
    set +e
    options=`getopt hH:p: $@`
    if test ! $? -eq 0; then
        display_error
    fi
    set -e
    eval set -- $options
    while [ $# -gt 0 ]; do
        case "$1" in
            -h) shift; display_help; exit;;
            -p) shift; REFUGE_PORT=$1; shift;;
            --) shift; break;;
            *) display_error "Unknown option: $1" >&2;;
        esac
    done
    
    REFUGE_HOME=$1
    if test "$REFUGE_HOME" == ""; then
        display_error
    else
        _make_refuge_home $REFUGE_HOME
    fi
}

parse_script_option_list $@
